
<div class= "container bg-light m-3 p-3 text-center">
    <h1>Profile of  <%= @user.name  %></h1>
    <hr>
    <div class="row">
        <div class="col-6">
            <h2>Past Events</h2>
            <% @pasts.each do |event|  %>
                <p><%= link_to event.event.name, event_path(event.id) %></p>
            <% end %>
        </div>
        <div class="col-6">
            <h2>Upcomming events</h2>
            <% @upcommings.each do |event|  %>
                <p><%= link_to event.event.name, event_path(event.id) %></p>  
            <% end %>
        </div>
    </div>
</div>

